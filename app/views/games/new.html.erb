<h1>New Game</h1>
<ul class="list-inline">
  <%@letters.each do |letter|%>
    <li class="list-inline-item btn btn-info btn-square rounded btn-box-shadow"><%= letter %></li>
  <% end %>
</ul>
<p>What's the longest word you can find?</p>
<form action="/score" method="get" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="suggestion" placeholder="Your word">
  <input type="submit" value="Play">
</form>
